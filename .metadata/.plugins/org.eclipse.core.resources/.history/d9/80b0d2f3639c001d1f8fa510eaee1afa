import static org.junit.jupiter.api.Assertions.*;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

class Appointment {

	@org.junit.jupiter.api.Test
	void test() throws InterruptedException {
		WebDriver driver = null;
		System.setProperty("webdriver.chrome.driver", "D:\\webdriver\\chromedriver.exe");
		driver = new ChromeDriver();
		
		driver.get("http://katalon-demo-cura.herokuapp.com/");
		
		//Page1
		driver.findElement(By.xpath("//*[@id=\"btn-make-appointment\"]")).click();
		
		//Page2 login
		driver.findElement(By.xpath("txt-username")).sendKeys("John Doe");
		driver.findElement(By.xpath("txt-password")).sendKeys("ThisIsNotAPassword");
		driver.findElement(By.xpath("btn-login")).click();
		
		//Page3 Make Appointment Detail
		Select option1 = new Select(driver.findElement(By.xpath("combo_facility")));
		option1.selectByVisibleText("Hongkong CURA Healthcare Center");
		driver.findElement(By.xpath("chk_hospotal_readmission")).click();
		WebElement radio2 = driver.findElement(By.xpath("radio_program_medicaid"));
		radio2.click();
		driver.findElement(By.xpath("txt_visit_date")).click();
		driver.findElement(By.xpath("txt_visit_date")).sendKeys("18/01/2023");
		driver.findElement(By.xpath("txt_comment")).click();
		driver.findElement(By.xpath("txt_comment")).sendKeys("Heart");
		driver.findElement(By.xpath("btn-book-appointment")).click();
		
		Thread.sleep(5000);
		driver.quit();
	}

}
